                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{path('app_visitor_contact_index')}}">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('app_register')}}">Inscription</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>

        {#Main#}
        <main>
            {% block main %} {% endblock %}
        </main>

        {#Footer#}
        <footer class="text-center">
            <p>DWWM</p>
        </footer>
    </body>
</html>