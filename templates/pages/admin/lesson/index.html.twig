{% extends "themes/base_admin.html.twig" %}

{% block title %}Liste des leçons{% endblock %}

{% block description %}Consultez la liste des leçons{% endblock %}

{% block keywords %}
    <meta name="keywords" content="ajouter, catégorie">
{% endblock %}

{% block j_query %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block data_tables %}
<link href="https://cdn.datatables.net/v/bs5/dt-2.3.7/datatables.min.css" rel="stylesheet" integrity="sha384-MnxpJFHU9dTMYXshJqBDA0d93sG4KKAFEEzynAaDqcPP7BYh11O5HxbJ6iLDWOXS" crossorigin="anonymous">
<script src="https://cdn.datatables.net/v/bs5/dt-2.3.7/datatables.min.js" integrity="sha384-7rAjATpiK3MtvKnoDf5WQz4O8W+3kpl4Jm82apgJgNkeUmZ59yjJT6LqlJpYqhVK" crossorigin="anonymous"></script>
<script>
    $(document).ready( function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/2.3.7/i18n/fr-FR.json',
            }
        });
    });
</script>
{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Liste des leçons</h1>

    {% include 'components/_alert.html.twig' %}

    <div class="d-flex justify-content-end align-items-center my-3">
        <a href="{{path('app_admin_lesson_create')}}" class="btn btn-primary shadow"><i class="fa-solid fa-plus"></i> Nouvelle leçon</a>
    </div>

    <div class="table-responsive">
        <table id="myTable" class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Titre</th>
                    <th>Catégorie</th>
                    <th>Niveau</th>
                    <th>Statut</th>
                    <th>Contenu</th>
                    <th>Créé le</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {% for lesson in lessons %}
                    <tr>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center align-items-center gap-1">
                                {% if lesson.image %}
                                    <img  src="{{ vich_uploader_asset(lesson, 'imageFile') | imagine_filter('admin_lesson_thumb') }}" alt="{{ lesson.title }}">
                                {% else %}
                                    <p class="text-center">---</p>
                                {% endif %}
                            </div>
                        </td>
                       <td>{{lesson.title}}</td>
                       <td>{{lesson.category.name}}</td>
                       <td>{{lesson.level}}</td>
                        <td class="align-middle">
                        <div class="d-flex flex-column justify-content-center align-items-center gap-1 text-center">
                            {% if lesson.isPublished %}
                                <p>Publié le {{lesson.publishedAt|format_date()}}<p>
                            {% else %}
                                <p>Non publié</p>
                            {% endif %}
                            <form action="{{path('app_admin_lesson_publish', {'id':lesson.id})}}" method="post">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('publish-lesson-'~lesson.id)}}">
                                <div class="form-check form-switch">
                                    <input 
                                        class="form-check-input" 
                                        type="checkbox" 
                                        role="switch"
                                        onclick="return confirm('Confirmer cette action?')"
                                        onchange="this.form.submit();"
                                        {{ lesson.isPublished ? 'checked' : '' }}
                                    >
                                </div>
                            </form>
                        </div>  
                        </td>
                       <td>
                            <a href="{{path('app_admin_lesson_show', {'id':lesson.id})}}" class="btn btn-sm btn-dark">Lire</a>
                       </td>
                       <td>{{lesson.createdAt|format_date()}}</td>
                       <td class="align-middle">
                        <div class="d-flex justify-content-center align-items-center gap-1">
                            <a href="{{path('app_admin_lesson_edit', {'id':lesson.id})}}" class="btn btn-sm btn-secondary">Modifier</a>
                            <form action="{{path('app_admin_lesson_delete', {'id':lesson.id})}}" method="post">
                                <input type="hidden" name="csrf_token" value="{{csrf_token('delete-lesson-'~lesson.id)}}">
                                <input type="submit" class="btn btn-sm btn-danger" value="Supprimer" onclick="return confirm('Confirmer la suppression de cet leçon?')">
                            </form>
                       </div>
                       </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}